#include <stdio.h>
#include <wiringPi.h>
#include <Python.h>

#define MAXLINESIZE 300

void embedPython(char pFileName)

int main()
{
	char calendarEntry[MAXLINESIZE], pFileName;
	FILE *file;
	
	embedPython(pFileName);
	wiringPiSetup();
	
	file = fopen("/tmp/test.txt", "r");
	fscanf(file, "%s", calendarEntry);
	printf("%s\n", calendarEntry);
	fclose(file);
}


//resource: http://www.linuxjournal.com/article/8497
void embedPython(char pFileName)
{
 	Py_Initialize();
 	PyRun_SimpleString(pFileName);
  	Py_Finalize();
}
